# Example environment variables for integration tests
# Copy this file to .env and update values as needed

# Target URL for tests - can be local, beta, or production
BASE_URL=http://localhost:5000

# Predefined environments (uncomment one):
# BASE_URL=http://localhost:5000           # Local development
# BASE_URL=https://beta.cubecobra.com      # Beta environment
# BASE_URL=https://cubecobra.com           # Production (use with caution!)

# Browser to use for tests (chromium, firefox, webkit)
BROWSER=chromium

# Run tests in headed mode (browser visible)
HEADED=false

# CI environment flag
CI=false

# Test user credentials
# Note: For production tests, use read-only operations only
TEST_USERNAME=testuser
TEST_PASSWORD=SecurePass123!
TEST_EMAIL=testuser@example.com

# Server Configuration (set this in the server's .env file)
# ENABLE_BOT_SECURITY=false   # Disable captcha and security questions for testing
