{
  "compilerOptions": {
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types", "../../node_modules/@types", "src/types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ES2020",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@client/*": ["../client/src/*"],
      "@jobs/*": ["../jobs/src/*"],
      "@utils/*": ["../utils/src/*"],
      "serverutils/*": ["src/serverutils/*"],
      "routes/*": ["src/routes/*"],
      "dynamo/*": ["src/dynamo/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx", "src", "../utils/src", "test/**/*.js", "test/**/*.ts", "jest.setup.ts", "jest.config.ts"]
}
