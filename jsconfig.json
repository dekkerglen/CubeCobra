{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "analytics/*": ["./src/analytics/*"],
            "components/*": ["./src/components/*"],
            "contexts/*": ["./src/contexts/*"],
            "drafting/*": ["src/client/drafting/*"],
            "filtering/*": ["./src/filtering/*"],
            "generated/*": ["src/client/generated/*"],
            "hooks/*": ["./src/hooks/*"],
            "layouts/*": ["./src/layouts/*"],
            "markdown/*": ["src/client/markdown/*"],
            "pages/*": ["./src/pages/*"],
            "proptypes/*": ["src/client/proptypes/*"],
            "res/*": ["./src/res/*"],
            "utils/*": ["./src/utils/*"]
        }
    },
    "include": ["src/**/*", "src/app.js", "util/*", "src/routes/*", "server.js"]
}
