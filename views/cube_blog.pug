extends layout

block content
  h5
    nav(aria-label='breadcrumb')
      ol.breadcrumb
        li.breadcrumb-item
          a(href='/user/view/'+cube.owner style='color: #218937;') #{owner}
        li.breadcrumb-item.active(aria-current='page') 
          a #{cube.name}
          if cube.type
            a  (#{cube.card_count} Card #{cube.type} Cube)
      

  ul.nav.nav-tabs.nav-fill.nav-justified
      li.nav-item
        a.nav-link(href='/cube/overview/'+cube._id) Overview
      li.nav-item
        a.nav-link(href='/cube/list/'+cube._id) List
      li.nav-item
        a.nav-link(href='/cube/playtest/'+cube._id) Playtest
      li.nav-item
        a.nav-link(href='/cube/analysis/'+cube._id) Analysis
      li.nav-item
        a.nav-link.active(href='/cube/blog/'+cube._id) Blog
  .container
    if user
      br
      if user.id == cube.owner
        button.btn.btn-success.newBlogButton(role='button') Create new blog post
        br
    br
    if pages      
      hr
      nav(aria-label='pagination')
        ul.pagination
          each page, i in pages
            if page.active
              li.page-item.active(aria-current='page')
                a.page-link(href=page.url)=page.content
                  span.sr-only (current)
            else
              li.page-item
                a.page-link(href=page.url)=page.content
      hr
    if posts
      each post, i in posts
        .card
          if post.changelist && post.html
            .card-header
              h5.card-title=post.title
              h6.card-subtitle.mb-2.text-muted=post.date_formatted
            .row.no-gutters
              .col-4(style='border-right: 1px solid #DFDFDF;')
                .card-body
                  p.card-text 
                    a !{post.changelist}   
              .col-8
                .card-body
                  .card-text
                    a !{post.html}           
          else if post.changelist
            .card-header
              h5.card-title=post.title
              h6.card-subtitle.mb-2.text-muted=post.date_formatted
            .card-body
              p.card-text 
                a !{post.changelist}
              a
          else
            .card-header
              h5.card-title=post.title
              h6.card-subtitle.mb-2.text-muted=post.date_formatted
            .card-body
              if post.html
                p=post.body
                .card-text
                  a !{post.html}
              else
                p=post.body
          if user && user.id == cube.owner
            .card-footer
              span
                button.btn.btn-success.editBlogButton(role='button' data-id=post._id) Edit
                a  
                a.btn.btn-danger(data-toggle='collapse', href='#collapsepost'+i, role='button') Delete
              .collapse(id='collapsepost'+i)
                span
                  a Are you sure? This action cannot be undone.  
                  button.btn.btn-danger.delete-blog(type='submit',value='Delete', data-id=post._id ) Yes, delete this post
        br
      if pages      
        hr
        nav(aria-label='pagination')
          ul.pagination
            each page, i in pages
              if page.active
                li.page-item.active(aria-current='page')
                  a.page-link(href=page.url)=page.content
                    span.sr-only (current)
              else
                li.page-item
                  a.page-link(href=page.url)=page.content
        hr
  if user
    if user.id == cube.owner
      // edit overview modal
      #editBlogModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='cubeModalLabel', aria-hidden='true')
        .modal-dialog.modal-lg(role='document')
          .modal-content
            form#postBlogForm(method='POST', action='/cube/blog/post/'+cube.id)
              .modal-header
                h5#blogEditTitle Edit Blog Post
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') Ã—
              .modal-body
                  label Title:
                  input#postBlogTitleInput.form-control(maxlength='200' name='title', type='text')
                  label Body:
                  input#postBlogHiddenId(type='hidden', name='id')
                  input#postBlogHiddenHTML(type='hidden', name='html')
                  include texteditor
              .modal-footer
                input.btn.btn-success(type='submit',value='Save')   
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
      script(src='/js/blog.js')
