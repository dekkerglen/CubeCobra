extends cube_layout

block cube_content
  include ../flash
  .container
    br
    .card
      .card-header
        .row
          .col-md-6
            h5.card-title Sample Pack
          .col-md-6
            a.float-right(href=`/cube/samplepack/${cube_id}/${seed}`) Link to Pack
      .card-body
        .samplepack.row
          if pack
            each card, i in pack
              if i % 5 === 0
                .col-md-2.offset-md-1(style='padding-top:10px;')
                  a.autocard(card=card.display_image)
                    img.defaultCardImage( src=card.display_image, width='150', height='210')
              else
                .col-md-2(style='padding-top:10px;')
                  a.autocard(card=card.display_image)
                    img.defaultCardImage( src=card.display_image, width='150', height='210')
