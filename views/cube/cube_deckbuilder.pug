extends ../layout

block content
  link(rel='stylesheet' href='/css/draft.css')  
  input#basicsraw(type='hidden', name='basicsraw', value=basics_raw)     
  form#submitDeckForm(method='POST', action='/cube/editdeck/'+deckid)
    input#deckraw(type='hidden', name='draftraw', value=deck_raw)     
       
  #dragelement(style='position:absolute;z-index: 9999;')       
  .cubenav
    ul.nav.nav-tabs.nav-fill(style='padding-top:10px;')
      li.nav-item
        h6(href='#' style='color: #218937;padding:5px;') #{cube.name}      
          if cube.type
            | (#{cube.card_count} Card #{cube.type} Cube)
      li.nav-item
        a.nav-link(href='/cube/overview/'+cube._id) Overview
      li.nav-item
        a.nav-link(href='/cube/list/'+cube._id) List
      li.nav-item
        a.nav-link.active(href='/cube/playtest/'+cube._id) Playtest
      li.nav-item
        a.nav-link(href='/cube/analysis/'+cube._id) Analysis
      li.nav-item(style='padding-right:10px;')
        a.nav-link(href='/cube/blog/'+cube._id) Blog        
  .usercontrols
    nav.navbar.navbar-expand.navbar-light
      .collapse.navbar-collapse
        ul.navbar-nav          
          li.nav-item
            a#saveDeckButton.nav-link(href='#' ) Save Deck
          li.nav-item
            a.nav-link(href='#' data-toggle='modal', data-target='#basicsModal') Add Basic Lands        
  include ../flash
  br
  .card.card-hover#deckhover
    .card-header
      h4#deckName Deck
    .card-body
      #deckarea(style='margin: 3px;')
  br
  .card.card-hover#sideboardhover
