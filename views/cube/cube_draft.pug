extends ../layout

block content
  link(rel='stylesheet' href='/css/draft.css')  
  input#draftraw(type='hidden', name='draftraw', value=draft_raw)        
  #dragelement(style='position:absolute;z-index: 9999;')    
  //hidden form to finish draft        
  form#submitDeckForm(method='POST', action='/cube/submitdeck/'+cube.id)
    input#submitDeckHidden(type='hidden', name='body')    
    
  .cubenav
    ul.nav.nav-tabs.nav-fill(style='padding-top:10px;')
      li.nav-item
        h6(href='#' style='color: #218937;padding:5px;') #{cube.name}      
          if cube.type
            | (#{cube.card_count} Card #{cube.type} Cube)
      li.nav-item
        a.nav-link(href='/cube/overview/'+cube_id) Overview
      li.nav-item
        a.nav-link(href='/cube/list/'+cube_id) List
      li.nav-item
        a.nav-link.active(href='/cube/playtest/'+cube_id) Playtest
      li.nav-item
        a.nav-link(href='/cube/analysis/'+cube_id) Analysis
      li.nav-item(style='padding-right:10px;')
        a.nav-link(href='/cube/blog/'+cube_id) Blog
  include ../flash
  br
  .card#packhover
    .card-header
      h4#packTitle
      h6#packSubtitle
        //.form-check
          input#autopass.form-check-input(type='checkbox', value='true' checked)
          label.form-check-label(for='autopass') Autopass
          br
          button.btn.btn-success#passpack(type='button')  Pass pack 
    #packarea(style='margin: 3px;')
  br
  .card.card-hover#pickshover
    .card-header
      h4 Picks
    .card-body
      #picksarea(style='margin: 3px;')
  script(src='/js/draft.js')
  
