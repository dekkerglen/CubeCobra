extends user_base

block information
  .container
    dl.row
      dt.col-sm-3 Name
      dd.col-sm-9 #{user.name}
      dt.col-sm-3 Username
      dd.col-sm-9 #{user.username}
      dt.col-sm-3 Email
      dd.col-sm-9 #{user.email}
      dt.col-sm-3 About
      dd.col-sm-9 #{name}
        form(method='POST', action='/user/updatebio')
          #form-group
            textarea.form-control(maxlength='2500', placeholder="Describe yourself here... (max length 2500)", name='body')=user.about
          br
          input.btn.btn-primary(type='submit',value='Update')

block changepassword
  form(method='POST', action='/user/resetpassword')
    .form-group.row
      label.col-sm-4.col-form-label Old password:
      input#inputPassword1.form-control.form-control.col-sm-8(name='password', type='password')
    .form-group.row
      label.col-sm-4.col-form-label New Password:
      input#inputPassword2.form-control.form-control.col-sm-8(name='password2', type='password')
    .form-group.row
      label.col-sm-4.col-form-label Confirm New Password:
      input#inputPassword3.form-control.form-control.col-sm-8(name='password3', type='password')
    input.btn.btn-primary(type='submit',value='Change Password')

block changeemail
  form(method='POST', action='/user/updateemail')
    .form-group.row
      label.col-sm-4.col-form-label New Email:
      input#inputEmail3.form-control.col-sm-8(name='email', type='text')
    .form-group.row
      label.col-sm-4.col-form-label Password:
      input#inputPassword2.form-control.form-control.col-sm-8(name='password', type='password')
    input.btn.btn-primary(type='submit',value='Update')
      
block yourcubes
  if cube
    ul.list-group
      each cube, i in cubes
        li.list-group-item
          a(href="/cube/view/"+cube._id)= cube.title
  else
    p You have no cubes! Create one with the form below!
  br
  form(method='POST', action='/cube/add')
    li.list-group-itemform.form-inline
      .form-group.mx-sm-3.mb-2
        input#inputPassword2.form-control(type='text',name='name' placeholder='Cube Name')
      button.btn.btn-primary.mb-2(type='submit') Create Cube
