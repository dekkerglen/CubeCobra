                  if symbol.length > 0
                    img(src='/content/symbols/'+symbol+'.png' align='right' width='15px' style='margin-top: 5px;')
    
      .col-9
        each card, i in activecards
          a.autocard(card=card.image_normal, href='/cube/draft/pick/'+draftid+';'+card._id  card_flip=card.image_flip)
            img( src=card.image_normal, width='150', height='210' alt=card.name)
